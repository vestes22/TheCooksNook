<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".AddRecipeActivity"
    android:background="@color/colorPrimary"
    android:padding="16dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/addRecipe_activityTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/add_recipe_title"
            android:gravity="center"
            android:textSize="24sp"
            android:background="@color/colorPrimary"
            android:textColor="@color/colorNude"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/addRecipe_recipeDetailsCard"
            app:layout_constraintTop_toTopOf="parent"/>


        <!-- Recipe Details CardView -->
        <androidx.cardview.widget.CardView
            android:id="@+id/addRecipe_recipeDetailsCard"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintTop_toBottomOf="@id/addRecipe_activityTitle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/addRecipe_searchResultsCard">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:padding="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimaryDark" >

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/addRecipe_recipeNameText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/recipe_name_hint"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:textColorHint="@color/colorNude"
                    app:hintTextColor="@color/colorAccent"
                    app:boxStrokeColor="@color/colorNude"
                    app:boxStrokeWidth="2dp"
                    app:errorEnabled="true"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintBottom_toTopOf="@id/addRecipe_recipeDescriptionText">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/addRecipe_recipeNameEditText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorNude"/>
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/addRecipe_recipeDescriptionText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/recipe_description_hint"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    app:errorEnabled="true"
                    android:textColorHint="@color/colorNude"
                    app:hintTextColor="@color/colorAccent"
                    app:boxStrokeColor="@color/colorNude"
                    app:boxStrokeWidth="2dp"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/addRecipe_recipeNameText"
                    app:layout_constraintBottom_toTopOf="@id/addRecipe_numServingsText">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/addRecipe_recipeDescriptionEditText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorNude"/>
                </com.google.android.material.textfield.TextInputLayout>


                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/addRecipe_numServingsText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/number_of_servings"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:textColorHint="@color/colorNude"
                    app:hintTextColor="@color/colorAccent"
                    app:boxStrokeColor="@color/colorNude"
                    app:errorEnabled="true"
                    app:boxStrokeWidth="2dp"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/addRecipe_recipeDescriptionText"
                    app:layout_constraintBottom_toTopOf="@id/addRecipe_recipeCategoryLabel">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/addRecipe_numServingsEditText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorNude"/>
                </com.google.android.material.textfield.TextInputLayout>

                <TextView
                    android:id="@+id/addRecipe_recipeCategoryLabel"
                    style="@style/cookbook_headings"
                    android:text="@string/category"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/addRecipe_numServingsText"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toTopOf="@id/addRecipe_chipGroup" />

                <com.google.android.material.chip.ChipGroup
                    android:id="@+id/addRecipe_chipGroup"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:singleSelection="true"
                    app:selectionRequired="true"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/addRecipe_recipeCategoryLabel"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent">

                    <com.google.android.material.chip.Chip
                        android:id="@+id/addRecipe_breakfastChip"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:chipStrokeColor="@color/colorAccent"
                        android:textColor="@color/colorNude"
                        app:chipBackgroundColor="@color/colorPrimaryDark"
                        android:layout_marginStart="8dp"
                        android:layout_marginEnd="8dp"
                        app:chipStrokeWidth="2dp"
                        android:text="@string/breakfast_text"/>

                    <com.google.android.material.chip.Chip
                        android:id="@+id/addRecipe_lunchChip"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:chipBackgroundColor="@color/colorPrimaryDark"
                        android:textColor="@color/colorNude"
                        android:layout_marginStart="8dp"
                        android:layout_marginEnd="8dp"
                        app:chipStrokeColor="@color/colorAccent"
                        app:chipStrokeWidth="2dp"
                        android:text="@string/lunch_text"/>

                    <com.google.android.material.chip.Chip
                        android:id="@+id/addRecipe_dinnerChip"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:chipStrokeColor="@color/colorAccent"
                        app:chipBackgroundColor="@color/colorPrimaryDark"
                        android:textColor="@color/colorNude"
                        android:layout_marginStart="8dp"
                        android:layout_marginEnd="8dp"
                        app:chipStrokeWidth="2dp"
                        android:text="@string/dinner_text"/>

                    <com.google.android.material.chip.Chip
                        android:id="@+id/addRecipe_appetizerChip"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:chipStrokeColor="@color/colorAccent"
                        app:chipBackgroundColor="@color/colorPrimaryDark"
                        android:textColor="@color/colorNude"
                        android:layout_marginStart="8dp"
                        android:layout_marginEnd="8dp"
                        app:chipStrokeWidth="2dp"
                        android:text="@string/appetizers_text"/>

                    <com.google.android.material.chip.Chip
                        android:id="@+id/addRecipe_dessertChip"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:chipStrokeColor="@color/colorAccent"
                        app:chipBackgroundColor="@color/colorPrimaryDark"
                        android:textColor="@color/colorNude"
                        android:layout_marginStart="8dp"
                        android:layout_marginEnd="8dp"
                        app:chipStrokeWidth="2dp"
                        android:text="Dessert"/>

                    <com.google.android.material.chip.Chip
                        android:id="@+id/addRecipe_drinkChip"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:chipStrokeColor="@color/colorAccent"
                        app:chipBackgroundColor="@color/colorPrimaryDark"
                        android:textColor="@color/colorNude"
                        android:layout_marginStart="8dp"
                        android:layout_marginEnd="8dp"
                        app:chipStrokeWidth="2dp"
                        android:text="Drink"/>

                </com.google.android.material.chip.ChipGroup>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>





        <!-- Search Ingredients Card -->
        <androidx.cardview.widget.CardView
            android:id="@+id/addRecipe_searchResultsCard"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintTop_toBottomOf="@id/addRecipe_recipeDetailsCard"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/addRecipe_indeterminateProgressBar">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:background="@color/colorPrimaryDark" >

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/addRecipe_searchIngredientsText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:hint="@string/search_for_ingredients"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:textColorHint="@color/colorNude"
                    app:hintTextColor="@color/colorAccent"
                    app:boxStrokeColor="@color/colorNude"
                    app:boxStrokeWidth="2dp"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/addRecipe_searchIngredientsButton"
                    app:layout_constraintBottom_toTopOf="@id/addRecipe_searchResultsRecyclerView" >

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/addRecipe_searchIngredientsEditText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorNude"/>
                </com.google.android.material.textfield.TextInputLayout>

                <Button
                    android:id="@+id/addRecipe_searchIngredientsButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="searchButtonClicked"
                    android:text="@string/search"
                    app:layout_constraintStart_toEndOf="@id/addRecipe_searchIngredientsText"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toTopOf="@id/addRecipe_searchResultsRecyclerView"/>

                <androidx.recyclerview.widget.RecyclerView
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:id="@+id/addRecipe_searchResultsRecyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/addRecipe_searchIngredientsButton" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>


        <ProgressBar
            android:id="@+id/addRecipe_indeterminateProgressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/addRecipe_searchResultsCard"
            app:layout_constraintBottom_toTopOf="@id/addRecipe_recipeIngredientsCard"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />



        <!-- Ingredients RecyclerView CardView -->
        <androidx.cardview.widget.CardView
            android:id="@+id/addRecipe_recipeIngredientsCard"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintTop_toBottomOf="@id/addRecipe_indeterminateProgressBar"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/addRecipe_recipeInstructionsCard">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="16dp"
                android:background="@color/colorPrimaryDark" >

                <TextView
                    android:id="@+id/addRecipe_recipeIngredientsLabel"
                    style="@style/cookbook_headings"
                    android:text="@string/ingredients_list"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toTopOf="@id/addRecipe_recipeIngredientsRecyclerView"/>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/addRecipe_recipeIngredientsRecyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/addRecipe_recipeIngredientsLabel" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>




        <!-- Instructions Card -->
        <androidx.cardview.widget.CardView
            android:id="@+id/addRecipe_recipeInstructionsCard"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintTop_toBottomOf="@id/addRecipe_recipeIngredientsCard"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/addRecipe_saveRecipeButton">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimaryDark" >

                <TextView
                    android:id="@+id/addRecipe_recipeInstructionsLabel"
                    style="@style/cookbook_headings"
                    android:text="@string/recipe_instructions_label"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toTopOf="@id/addRecipe_recipeInstructionsText"/>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/addRecipe_recipeInstructionsText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/preparation_instructions"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:textColorHint="@color/colorNude"
                    app:hintTextColor="@color/colorAccent"
                    app:boxStrokeColor="@color/colorNude"
                    app:boxStrokeWidth="2dp"
                    app:errorEnabled="true"
                    android:inputType="textMultiLine"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/addRecipe_recipeInstructionsLabel"
                    app:layout_constraintBottom_toBottomOf="parent" >

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/addRecipe_recipeInstructionsEditText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:minHeight="150dp"
                        android:textColor="@color/colorNude"/>
                </com.google.android.material.textfield.TextInputLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>




        <!-- Save Recipe button -->
        <androidx.cardview.widget.CardView
            android:id="@+id/addRecipe_saveRecipeButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:onClick="saveRecipeButtonClicked"
            card_view:cardBackgroundColor="@color/colorAccent"
            card_view:cardElevation="8dp"
            card_view:cardCornerRadius="4dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/addRecipe_recipeInstructionsCard">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    style="@style/cookbook_headings"
                    android:text="@string/save_recipe"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="16dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>