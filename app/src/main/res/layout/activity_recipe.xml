<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:orientation="vertical"
        android:padding="24dp">




        <!-- Recipe Details Card -->
        <androidx.cardview.widget.CardView
            android:id="@+id/recipe_recipeDetailsCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:background="@color/colorPrimaryDark">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimaryDark"
                android:padding="24dp">

                <ImageView
                    android:id="@+id/recipe_recipeImage"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:src="@drawable/fruit_salad"
                    android:layout_margin="8dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/recipe_recipeName"
                    app:layout_constraintBottom_toBottomOf="parent"/>

                <TextView
                    android:id="@+id/recipe_recipeName"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/recipe_title"
                    android:textColor="@color/colorNude"
                    android:textSize="32sp"
                    android:layout_margin="8dp"
                    app:layout_constraintTop_toTopOf="parent"

                    
                    app:layout_constraintStart_toEndOf="@id/recipe_recipeImage"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toTopOf="@id/recipe_recipeDescription"/>

                <TextView
                    android:id="@+id/recipe_recipeDescription"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/sample_recipe_description"
                    android:textColor="@color/colorNude"
                    android:layout_margin="8dp"
                    app:layout_constraintTop_toBottomOf="@id/recipe_recipeName"
                    app:layout_constraintStart_toEndOf="@id/recipe_recipeImage"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>



        <!-- Ingredients Card -->
        <androidx.cardview.widget.CardView
            android:id="@+id/recipe_recipeIngredientsCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:background="@color/colorPrimaryDark">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimaryDark"
                android:padding="24dp">

                <TextView
                    android:id="@+id/recipe_recipeIngredientsLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ingredients"
                    android:textColor="@color/colorNude"
                    android:textSize="24sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toTopOf="@id/recipe_ingredientsListRecyclerView"/>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recipe_ingredientsListRecyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/recipe_recipeIngredientsLabel"
                    app:layout_constraintBottom_toBottomOf="parent"/>

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>




        <!-- Instructions Card -->
        <androidx.cardview.widget.CardView
            android:id="@+id/recipe_recipeInstructionsCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:background="@color/colorPrimaryDark">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimaryDark"
                android:padding="24dp">

            <TextView
                android:id="@+id/recipe_recipeInstructionsLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Instructions"
                android:textColor="@color/colorNude"
                android:textSize="24sp"
                android:layout_margin="8dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@id/recipe_recipeInstructions"/>

            <TextView
                android:id="@+id/recipe_recipeInstructions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="100dp"
                android:text="Preparation Instructions"
                android:textColor="@color/colorNude"
                android:textSize="16sp"
                android:layout_margin="8dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>





        <!-- Nutrition Card -->
        <androidx.cardview.widget.CardView
            android:id="@+id/recipe_recipeNutritionCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:background="@color/colorPrimaryDark">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimaryDark"
                android:padding="24dp">

                <TextView
                    android:id="@+id/recipe_recipeNutritionLabel"
                    android:layout_width="match_parent"
                    android:gravity="center"
                    android:layout_height="wrap_content"
                    android:text="Nutrition Facts"
                    android:textColor="@color/colorNude"
                    android:textSize="24sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toTopOf="@id/recipe_recipeNutritionRecyclerView"/>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recipe_recipeNutritionRecyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/recipe_recipeNutritionLabel"
                    app:layout_constraintBottom_toBottomOf="parent"/>

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>


        <Button
            android:id="@+id/recipe_deleteRecipeButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/colorAccent"
            android:onClick="deleteRecipeButtonClicked"
            android:layout_gravity="center"
            android:text="Delete"
            />

        <Button
            android:id="@+id/recipe_addToShoppingListButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/colorAccent"
            android:onClick="addToShoppingListButtonClicked"
            android:layout_gravity="center"
            android:text="Add To Shopping List"
            />

        <Button
            android:id="@+id/recipe_addToMealPlanButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/colorAccent"
            android:layout_gravity="center"
            android:onClick="addToMealPlanButtonClicked"
            android:text="Add To Meal Plan"
            />

    </LinearLayout>
</ScrollView>