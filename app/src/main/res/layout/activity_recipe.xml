<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:orientation="vertical"
        android:padding="24dp"
        android:id="@+id/recipe_linearLayout">




        <!-- Recipe Details Card -->
        <androidx.cardview.widget.CardView
            android:id="@+id/recipe_recipeDetailsCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:background="@color/colorPrimaryDark">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimaryDark"
                android:padding="24dp">

                <TextView
                    android:id="@+id/recipe_recipeName"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textColor="@color/colorAccent"
                    android:textSize="24sp"
                    android:layout_margin="8dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintBottom_toTopOf="@id/recipe_recipeNumServings"
                    app:layout_constraintEnd_toEndOf="parent"/>

                <TextView
                    android:id="@+id/recipe_recipeNumServings"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorNude"
                    android:layout_margin="8dp"
                    android:text="@string/servings"
                    app:layout_constraintTop_toBottomOf="@id/recipe_recipeName"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintBottom_toTopOf="@id/recipe_recipeDescription"
                    />

                <TextView
                    android:id="@+id/recipe_recipeDescription"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorNude"
                    android:lineSpacingExtra="4dp"
                    android:layout_margin="8dp"
                    app:layout_constraintTop_toBottomOf="@id/recipe_recipeNumServings"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorAccent"
            android:textSize="16sp"
            android:padding="8dp"
            android:lineSpacingExtra="6dp"
            android:layout_gravity="center"
            android:text="*Some ingredients may have missing or incomplete nutrition data. Click on an ingredient to view it's nutritional profile and see which nutrients may not be included."/>


        <!-- Ingredients Card -->
        <androidx.cardview.widget.CardView
            android:id="@+id/recipe_recipeIngredientsCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:background="@color/colorPrimaryDark">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimaryDark"
                android:padding="24dp">

                <TextView
                    android:id="@+id/recipe_recipeIngredientsLabel"
                    android:text="Ingredients"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toTopOf="@id/recipe_ingredientsListRecyclerView"
                    style="@style/section_headings" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recipe_ingredientsListRecyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/recipe_recipeIngredientsLabel"
                    app:layout_constraintBottom_toBottomOf="parent"/>

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>




        <!-- Instructions Card -->
        <androidx.cardview.widget.CardView
            android:id="@+id/recipe_recipeInstructionsCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:background="@color/colorPrimaryDark">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimaryDark"
                android:padding="24dp">

            <TextView
                style="@style/section_headings"
                android:id="@+id/recipe_recipeInstructionsLabel"
                android:text="Instructions"
                android:layout_margin="8dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@id/recipe_recipeInstructions"/>

            <TextView
                android:id="@+id/recipe_recipeInstructions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="100dp"
                android:text="Preparation Instructions"
                android:textColor="@color/colorNude"
                android:textSize="16sp"
                android:layout_margin="8dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>





        <!-- Nutrition Card -->
        <androidx.cardview.widget.CardView
            android:id="@+id/recipe_recipeNutritionCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:background="@color/colorPrimaryDark">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimaryDark"
                android:padding="24dp">

                <TextView
                    android:id="@+id/recipe_recipeNutritionLabel"
                    style="@style/section_headings"
                    android:text="Nutrition Facts"

                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toTopOf="@id/recipe_recipeNutritionCardDescription"/>

                <TextView
                    android:id="@+id/recipe_recipeNutritionCardDescription"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Calculated per single serving. "
                    android:textColor="@color/colorNude"
                    app:layout_constraintTop_toBottomOf="@id/recipe_recipeNutritionLabel"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintBottom_toTopOf="@id/recipe_recipeNutritionProfileButton"
                    app:layout_constraintEnd_toEndOf="parent"/>

                <Button
                    android:id="@+id/recipe_recipeNutritionProfileButton"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:text="View Nutrition Profile"
                    android:backgroundTint="@color/colorAccent"
                    android:onClick="recipeNutritionProfileButtonClicked"
                    android:layout_margin="8dp"
                    app:layout_constraintStart_toEndOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/recipe_recipeNutritionCardDescription"
                    app:layout_constraintBottom_toTopOf="@id/recipe_recipeNutritionRecyclerView"
                    />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recipe_recipeNutritionRecyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/recipe_recipeNutritionProfileButton"
                    app:layout_constraintBottom_toBottomOf="parent"/>

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</ScrollView>