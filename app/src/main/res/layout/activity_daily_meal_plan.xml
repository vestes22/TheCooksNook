<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fillViewport="true"
    android:orientation="vertical"
    android:background="@color/colorPrimary"
    tools:context=".DailyMealPlanActivity">

    <LinearLayout
        android:id="@+id/dailyMealPlan_linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/dailyMealPlan_activityTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Daily Meal Plan"
            android:layout_margin="16dp"
            android:layout_gravity="center"
            style="@style/cookbook_headings" />



        <!-- DatePicker card -->

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/dailyMealPlan_datePickerCard"
            android:layout_margin="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimaryDark">

                <TextView
                    android:id="@+id/dailyMealPlan_dayOfWeekText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/cookbook_headings"
                    android:text="Tuesday"
                    android:layout_margin="16dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>

                <TextView
                    android:id="@+id/dailyMealPlan_dateText"
                    style="@style/cookbook_headings"
                    android:text="January 8, 2022"

                    app:layout_constraintTop_toBottomOf="@id/dailyMealPlan_dayOfWeekText"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_margin="16dp"
                    />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </com.google.android.material.card.MaterialCardView>





        <!-- Recipes Card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_margin="16dp"
            android:padding="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimaryDark"
                android:padding="8dp">

                <TextView
                    android:id="@+id/dailyMealPlan_recipesTitle"
                    style="@style/cookbook_headings"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="16dp"
                    android:text="Recipes"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/dailyMealPlan_breakfastTitle"
                    style="@style/addMealPlan_recipeTitle"
                    android:text="Breakfast"
                    app:layout_constraintBottom_toTopOf="@id/dailyMealPlan_breakfastRecipeList"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/dailyMealPlan_recipesTitle" />

                <ListView
                    android:id="@+id/dailyMealPlan_breakfastRecipeList"
                    style="@style/addMealPlan_recipeText"

                    app:layout_constraintBottom_toTopOf="@id/dailyMealPlan_lunchTitle"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/dailyMealPlan_breakfastTitle" />

                <TextView
                    android:id="@+id/dailyMealPlan_lunchTitle"
                    style="@style/addMealPlan_recipeTitle"
                    android:text="Lunch"
                    app:layout_constraintBottom_toTopOf="@id/dailyMealPlan_lunchRecipeList"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/dailyMealPlan_breakfastRecipeList" />

                <ListView
                    android:id="@+id/dailyMealPlan_lunchRecipeList"
                    style="@style/addMealPlan_recipeText"

                    app:layout_constraintBottom_toTopOf="@id/dailyMealPlan_dinnerTitle"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/dailyMealPlan_lunchTitle" />

                <TextView
                    android:id="@+id/dailyMealPlan_dinnerTitle"
                    style="@style/addMealPlan_recipeTitle"

                    android:text="Dinner"
                    app:layout_constraintBottom_toTopOf="@id/dailyMealPlan_dinnerRecipeList"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/dailyMealPlan_lunchRecipeList" />

                <ListView
                    android:id="@+id/dailyMealPlan_dinnerRecipeList"
                    style="@style/addMealPlan_recipeText"

                    app:layout_constraintBottom_toTopOf="@id/dailyMealPlan_appetizerTitle"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/dailyMealPlan_dinnerTitle" />

                <TextView
                    android:id="@+id/dailyMealPlan_appetizerTitle"
                    style="@style/addMealPlan_recipeTitle"
                    android:text="Appetizers"
                    app:layout_constraintBottom_toTopOf="@id/dailyMealPlan_appetizerRecipeList"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/dailyMealPlan_dinnerRecipeList" />

                <ListView
                    android:id="@+id/dailyMealPlan_appetizerRecipeList"
                    style="@style/addMealPlan_recipeText"
                    app:layout_constraintBottom_toTopOf="@id/dailyMealPlan_dessertTitle"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/dailyMealPlan_appetizerTitle" />

                <TextView
                    android:id="@+id/dailyMealPlan_dessertTitle"
                    style="@style/addMealPlan_recipeTitle"
                    android:text="Dessert"
                    app:layout_constraintBottom_toTopOf="@id/dailyMealPlan_dessertRecipeList"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/dailyMealPlan_appetizerRecipeList" />

                <ListView
                    android:id="@+id/dailyMealPlan_dessertRecipeList"
                    style="@style/addMealPlan_recipeText"
                    app:layout_constraintBottom_toTopOf="@id/dailyMealPlan_drinkTitle"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/dailyMealPlan_dessertTitle" />

                <TextView
                    android:id="@+id/dailyMealPlan_drinkTitle"
                    style="@style/addMealPlan_recipeTitle"
                    android:text="Drinks"
                    app:layout_constraintBottom_toTopOf="@id/dailyMealPlan_drinkRecipeList"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/dailyMealPlan_dessertRecipeList" />

                <ListView
                    android:id="@+id/dailyMealPlan_drinkRecipeList"
                    style="@style/addMealPlan_recipeText"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/dailyMealPlan_appetizerTitle" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </com.google.android.material.card.MaterialCardView>

        <fragment
            android:id="@+id/dailyMealPlan_nutritionProfileFragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:name="com.codelovely.thecooksnook.NutritionProfileFragment" />

    </LinearLayout>
</ScrollView>